@model AgendamentosModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<link rel="stylesheet" href="~/css/JogoAberto.css" asp-append-version="true">

<div class="main-container">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div class="page-title">
        <h1>Aceitar Jogo</h1>
    </div>

    <form asp-controller="Home" asp-action="JogoAberto" method="post">
        <div class="form-container">
            <!-- Times (MESMO LAYOUT DO SEU CÓDIGO) -->
            <div class="row align-items-center mb-4">
                <!-- Time 1 -->
                <div class="col-md-5 mb-3 mb-md-0">
                    <div class="text-center text-md-start mb-2">
                        <img src="data:image/*;base64,@Model.Agendar.FotoTime1"
                             class="rounded-circle img-fluid"
                             style="width: 100px; height: 100px; object-fit: cover; max-width: 100%;" />
                    </div>

                    <label class="form-label fw-bold">Time 1</label>
                    @Html.TextBoxFor(model => model.Agendar.Time1, new
                        {
                            @readonly = "readonly",
                            @class = "form-control rounded-3",
                            style = "border-radius: 10px;"
                        })
                    @Html.HiddenFor(model => model.Agendar.idTime1)
                    @Html.HiddenFor(model => model.Agendar.id)
                </div>

                <!-- VS no meio -->
                <div class="col-md-2 text-center my-3 my-md-0">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center"
                         style="width: 50px; height: 50px;">
                        <span class="fs-4 text-muted">VS</span>
                    </div>
                </div>

                <!-- Time 2 -->
                <div class="col-md-5">
                    <div class="text-center text-md-start mb-2">
                        <img src="data:image/*;base64,@Model.Agendar.FotoTime2"
                             class="rounded-circle img-fluid"
                             style="width: 100px; height: 100px; object-fit: cover; max-width: 100%;" />
                    </div>

                    <label class="form-label fw-bold">Time 2</label>
                    @Html.TextBoxFor(model => model.Agendar.Time2, new
                        {
                            @readonly = "readonly",
                            @class = "form-control rounded-3",
                            style = "border-radius: 10px;"
                        })
                    @Html.HiddenFor(model => model.Agendar.idTime2)
                </div>
            </div>

            <!-- Data e Hora -->
            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <label class="form-label">Data do Jogo</label>
                    @Html.TextBox("Agendar.Data", Model.Agendar.Data.ToString("yyyy-MM-dd"), new
                        {
                            @readonly = "readonly",
                            @class = "form-control"
                         
                        })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Horário</label>
                    @Html.TextBoxFor(model => model.Agendar.Hora, new
                        {
                            @readonly = "readonly",
                            @class = "form-control"
                           
                        })
                </div>
            </div>

            <!-- Local -->
            <div class="row mb-4">
                <div class="col-12">
                    <label class="form-label">Local da Quadra</label>
                    @Html.TextBoxFor(model => model.Agendar.Local, new
                        {
                            @readonly = "readonly",
                            @class = "form-control"
                        })
                    @Html.HiddenFor(model => model.id_Quadra)
                </div>
            </div>

            <!-- Descrição -->
            <div class="row mb-4">
                <div class="col-12">
                    <label class="form-label">Descrição</label>
                    @Html.TextAreaFor(model => model.Agendar.DS_Descrição, new
                        {
                            @readonly = "readonly",
                            @class = "form-control form-textarea"
                        })
                </div>
            </div>

            <!-- Botões (ESTILO IGUAL AO PRIMEIRO CÓDIGO) -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="btn-group">
                        <a class="btn btn-outline" asp-action="Index" asp-controller="Home">Voltar</a>
                        <button type="submit" class="btn btn-salvar">Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>