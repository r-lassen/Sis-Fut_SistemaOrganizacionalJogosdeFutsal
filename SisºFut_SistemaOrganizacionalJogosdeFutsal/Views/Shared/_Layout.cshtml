<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Sis • Fut ⚽ </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.datatables.net/v/dt/dt-2.2.2/datatables.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action=""><strong>  Sis </strong> <span style="color: #37c3b4;">•</span> Fut</a>
                @await Component.InvokeAsync("Menu")
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer para telas maiores -->
    <footer class="border-top footer text-muted d-none d-md-block">
        <div class="container d-flex justify-content-center">
            &copy; 2025 <span style="color: #37c3b4; margin: 0 8px;">•</span> <strong>Sistema Organizacional Jogos de Futsal</strong>
        </div>
    </footer>

    <!-- Footer para telas menores -->
    <footer class="border-top footer text-muted d-block d-md-none">
        <div class="container d-flex justify-content-center">
            &copy; 2025 <span style="color: #37c3b4; margin: 0 8px;">•</span> <strong>SisºFut</strong>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.2.2/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- jQuery deve vir antes de tudo que depende dele -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Plugins que dependem do jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Bootstrap deve vir por último -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Auto logout script (10 minutos de inatividade) -->
    <script>
        (function () {
            let timeout;
            const tempoInatividade = 10 * 60 * 1000; // 10 minutos

            function resetarTimer() {
                clearTimeout(timeout);
                timeout = setTimeout(() => {
                    window.location.href = '/Login/Index'; // Redireciona para a tela de login
                }, tempoInatividade);
            }

            ['click', 'mousemove', 'keydown', 'scroll', 'touchstart'].forEach(evento => {
                document.addEventListener(evento, resetarTimer, false);
            });

            resetarTimer(); // Inicia o timer assim que a página carrega
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
